<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="motorcycle_registry_template_product_form_inherit_ge07" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.form.inherit.ge07</field>
        <field name="model">motorcycle.registry</field>
        <field name="inherit_id" ref="motorcycle_registry.motorcycle_registry_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page" position="after">
                <page attrs="{'invisible': ''}" string="Motorcycle Tracking Info">
                    <group>
                        <separator string="Stock Info" />
                        <field name="stock_name" />
                        <separator string="Sales Info"/>
                        <field name="sale_order"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="motorcycle_registry_template_product_list_inherit_ge07" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.list.inherit.ge07</field>
        <field name="model">motorcycle.registry</field>
        <field name="inherit_id" ref="motorcycle_registry.motorcycle_registry_view_list"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="stock_name"/>
                <field name="sale_order"/>
            </xpath>

        </field>
    </record>

</odoo>